@model ML.Shippers
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3><strong>@ViewBag.Titulo</strong></h3>
            <h5>Fill out all the data in their corresponding fields.</h5>
            <hr />
        </div>
    </div>

    @using (Html.BeginForm("Form", "Shippers", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.ShipperID, new { @class = "control-label col-md-2 visually-hidden" })
                @Html.TextBoxFor(model => model.ShipperID, new { @class = "form-control visually-hidden", @readonly = true })
                @Html.ValidationMessageFor(model => model.ShipperID)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.CompanyName, new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>

            <div class="col-md-3">
                @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Phone)
            </div>

            <div class="col-md-3">
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-2">
            </div>

            <div class="col-md-2">
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@ViewBag.Accion" class="btn btn-success" />
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Go back", "GetAll", "Shippers", htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

            <div class="col-md-2">
            </div>

            <div class="col-md-2">
            </div>
        </div>
    }
</div>