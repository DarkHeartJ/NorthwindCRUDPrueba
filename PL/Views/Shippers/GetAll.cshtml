@model ML.Shippers
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 style="text-align:center"><strong>Shippers</strong></h3>
            <h5>To add a record use the green button.</h5>
            <h5>To modify a record use the yellow button.</h5>
            <h5>To delete a record use the red button.</h5>
            <div class="col-md-1">
                @Html.ActionLink("", "Form", "Shippers", htmlAttributes: new { @class = "btn btn-success bi bi-plus-square" })
            </div>
        </div>
    </div>

    <hr />

    <div>
        @if (Model.Shipperss != null)
        {
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Update</th>
                                <th scope="col" class="">ShipperID</th>
                                <th scope="col">Company Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Shippers shippers in Model.Shipperss)
                            {
                                <tr>
                                    <td>
                                        <a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Shippers", new {ShipperId = shippers.ShipperID})"></a>
                                    </td>
                                    <td class="">@shippers.ShipperID</td>
                                    <td>@shippers.CompanyName</td>
                                    <td>@shippers.Phone</td>
                                    <td>
                                        <a class="btn btn-danger bi bi-x-square" href="@Url.Action("Delete", "Shippers", new { ShipperId = shippers.ShipperID })" onclick="return confirm('Are you sure you want to delete this data?');"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</div>